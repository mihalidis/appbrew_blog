<h1>Home</h1>
<p><%= startingContent %></p>
<hr>

<% posts.forEach(post => { %>
    <div>
        <h2><%= post.title %></h2>
        <p>
            <%= post.content.substring(0,100)+ " ..." %> 
            <a href="/posts/<%= post._id %>">Read More!</a>
        </p>
        
    </div>
    <hr>
<% }); %>

